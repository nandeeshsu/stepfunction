lambda invoke

{
    "Version": "2012-10-17",
    "Statement": [
        {
            "Effect": "Allow",
            "Action": [
                "lambda:InvokeFunction"
            ],
            "Resource": [
                "arn:aws:lambda:us-east-1:905418472862:function:trigger-ecs-tasks:*",
                "arn:aws:lambda:us-east-1:905418472862:function:hello-world:*"
            ]
        },
        {
            "Effect": "Allow",
            "Action": [
                "lambda:InvokeFunction"
            ],
            "Resource": [
                "arn:aws:lambda:us-east-1:905418472862:function:trigger-ecs-tasks",
                "arn:aws:lambda:us-east-1:905418472862:function:hello-world"
            ]
        }
    ]
}

